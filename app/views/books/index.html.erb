
<h1 class="title">Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan=3>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book.id) %></td>
      <td><%= link_to "edit", edit_book_path(book) %></td>
      <td><%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New Books</h2>
<%= form_with model:@book, local:true do |f| %>
  
  
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <h4>body</h4>
    <%= f.text_area :body %>
  </div>
  
  <div class="btn">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
